<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vibes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Dark Mode -->
    <!-- Screen background if dark Mode on -->
    <style name="SCREEN">
        <item name="android:background">#000000</item>
    </style>
    <!-- texts background if dark Mode on -->
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Button background if dark Mode on -->
    <style name="BUTTON">
        <item name="android:background">#EDEDED</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>